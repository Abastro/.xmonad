Config { font = "-*-Fixed-Bold-R-Normal-*-18-*-*-*-*-*-*-*"
  , bgColor = "black"
  , fgColor = "grey"
  , position = TopW L 95
  , lowerOnStart = True
  , commands = [
    Run Cpu ["-L","3","-H","50","--normal","grey","--high","yellow"] 10
    , Run Memory ["-t","Mem: <usedratio>%"] 10
    , Run Date "%a, %b %d %H:%M" "date" 10
    , Run Battery ["-t","Bat: <left>%<acstatus>","--"
      , "-O", "<fc=green>+</fc>", "-i", "", "-o", "<fc=red>-</fc>", "-h", "green", "-l", "red"] 10
    , Run StdinReader
    ]
  , sepChar = "%"
  , alignSep = "}{"
  , template = " %StdinReader% } <fc=#ee9a00>%date%</fc> { %battery% | %cpu% | %memory% "
  }
